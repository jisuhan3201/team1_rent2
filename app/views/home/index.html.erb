<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Category</th>
      <th>Sub category</th>
      <th>Image</th>
      <th>Status</th>
      <th>create time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.user_id %></td>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.sub_category %></td>
        <td><%= image_tag item.image.thumb %></td>
        <td><%= item.status %></td>
        <td><%= item.created_at %></td>
        <td><%= link_to "렌트하러 가기", :controller => "requests", :action => "index", item_id: item.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
