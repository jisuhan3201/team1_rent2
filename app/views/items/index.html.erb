<p id="notice"><%= notice %></p>

<h1>내가 대여 등록한 Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Category</th>
      <th>Sub category</th>
      <th>Image</th>
      <th>Status</th>
      <th>create time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.user_id %></td>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.sub_category %></td>
        <td><%= image_tag item.image.thumb %></td>
        <td><%= item.status %></td>
        <td><%= item.created_at %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

